<% include ../partials/header %>
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form action="/campgrounds/<%= campground.id %>?_method=put" method="post">
          <div class="form-group">
            <input type="text" name="campName" class="form-control" value="<%= campground.name %>"/>
          </div>
          <div class="form-group">
            <input type="text" name="campImage" class="form-control" value="<%= campground.image %>"/>
          </div>
          <div class="form-group">
            <input type="number" name="campPrice" class="form-control" value="<%= campground.price %>" step="any" min="0"/>
          </div>
          <div class="form-group">
            <textarea name="campDescription" class="form-control"><%= campground.description %></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
          <a href="/campgrounds/<%= campground.id %>" class="btn btn-outline-secondary btn-block">Cancel</a>
        </form>
      </div>
    </div>
<% include ../partials/footer %>