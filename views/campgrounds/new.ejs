<% include ../partials/header %>
    <h1 class="text-center">Add Campground</h1>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form action="/campgrounds" method="post">
          <div class="form-group">
            <input type="text" name="campName" class="form-control" placeholder="Camp Name"/>
          </div>
          <div class="form-group">
            <input type="text" name="campImage" class="form-control" placeholder="Camp Image URL"/>
          </div>
          <div class="form-group">
            <input type="number" name="campPrice" class="form-control" placeholder="Price per night" step="any" min="0"/>
          </div>
          <div class="form-group">
            <textarea name="campDescription" class="form-control" placeholder="Camp Description"></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
          <a href="/campgrounds" class="btn btn-outline-secondary btn-block">Cancel</a>
        </form>
      </div>
    </div>
<% include ../partials/footer %>