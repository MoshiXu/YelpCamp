<% include ../partials/header %>
    <h1 class="text-center">Add Comment for <%= campground.name %></h1>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form action="/campgrounds/<%= campground.id%>/comments" method="post">
          <div class="form-group">
            <input type="text" name="author" class="form-control" placeholder="Your name"/>
          </div>
          <div class="form-group">
            <textarea name="comment" class="form-control" placeholder="Enter comment here"></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
          <a href="/campgrounds/<%= campground.id %>" class="btn btn-outline-secondary btn-block">Cancel</a>
        </form>
      </div>
    </div>
<% include ../partials/footer %>